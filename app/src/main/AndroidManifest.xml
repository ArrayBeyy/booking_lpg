<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookinglapangan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookinglapangan">

        <!-- Main -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity android:name=".MainActivity" android:exported="false" />

        <!-- Booking -->
        <activity android:name=".ui.booking.BookingActivity" android:exported="false" />

        <!-- Register -->
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />

        <!-- âœ… Tambahkan ini -->
        <activity android:name=".ui.lapangan.LapanganActivity" android:exported="false" />

    </application>
</manifest>
