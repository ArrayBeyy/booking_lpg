<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookinglapangan">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- Opsional (untuk Scan QR) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".BookingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookinglapangan">
        <activity
            android:name=".ui.Kategori.DetilTempatActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Lapangan.LapanganDetailActivity"
            android:exported="false" /> <!-- SPLASH jadi LAUNCHER, pakai style: Theme.BookingLapangan.Splash -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BookingLapangan.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MainActivity dibuka dari Splash -->
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- Activities lain -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.booking.HistoryBookingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.QR.ScanQrActivity"
            android:exported="false" />
        <activity
            android:name=".ui.store.PenjualanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payment.XenditWebViewActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.booking.BookingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.lapangan.LapanganActivity"
            android:exported="false" />
        <activity
            android:name=".ui.lapangan.LapanganDetailActivity"
            android:exported="false" />
    </application>

</manifest>